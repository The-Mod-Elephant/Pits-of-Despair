        DisplayStringHead(Myself,95347)  // Now we see that I am the stronger!
        Continue()
    RESPONSE #50
        SetGlobalTimer("OH_Taunt","LOCALS",ONE_ROUND)
        SetGlobal("OHB_CROWD_NEG","MYAREA",2)
        GlobalShout(9002)
        DisplayStringHead(Myself,95348)  // Your death reveals your weakness.
        Continue()
END

