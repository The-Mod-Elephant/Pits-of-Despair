        SetGlobalTimer("OH_Taunt","LOCALS",THREE_ROUNDS)
        DisplayStringHead(Myself,94528)  // Shaman, I need aid!
        Help()
        Continue()
    RESPONSE #50
        SetGlobalTimer("OH_Taunt","LOCALS",THREE_ROUNDS)
        DisplayStringHead(Myself,94529)  // Healing... QUICKLY!
        Help()
        Continue()
END

