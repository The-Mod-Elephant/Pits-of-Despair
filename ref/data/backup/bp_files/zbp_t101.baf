IF
    !GlobalTimerNotExpired("OH_Taunt","LOCALS")
    !StateCheck(Myself,STATE_INVISIBLE)
    HPPercentLT(Myself,60)
    OR(2)
        Range([EVILCUTOFF.0.0.CLERIC_ALL],30)
        Range([EVILCUTOFF.0.0.DRUID_ALL],30)
THEN
