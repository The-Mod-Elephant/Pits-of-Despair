    !Detect([PC])
    !Detect(Player1)
    InMyArea(Player1)
    !StateCheck(Player1,STATE_REALLY_DEAD)
THEN
    RESPONSE #100
        ForceSpellRES("OHBTELWE",Player1)  // Teleport Without Error
END

