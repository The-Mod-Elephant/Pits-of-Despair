IF
    NumberOfTimesTalkedTo(0)
    Detect([PC])
    !StateCheck([PC],STATE_REALLY_DEAD)
    Global("OHB_WARN","GLOBAL",1)
THEN
    RESPONSE #100
        SetInterrupt(FALSE)
        ClearAllActions()
        StartCutSceneMode()
        MultiPlayerSync()
        StartCutScene("OHBCUT55")
END

IF
    NumberOfTimesTalkedTo(0)
    Detect([PC])
    !StateCheck([PC],STATE_REALLY_DEAD)
    Global("OHB_WARN","GLOBAL",3)
THEN
    RESPONSE #100
        SetGlobalTimer("OH_WKill","LOCALS",THREE_ROUNDS)
        StartDialogueNoSet([PC])
END

IF
    GlobalTimerExpired("OH_WKill","LOCALS")
THEN
    RESPONSE #100
        SetInterrupt(FALSE)
        ForceSpell(Myself,DO_NOTHING)  // SPIN905.SPL (No such index)
        Wait(1)
        Kill(Player1)
        Kill(Player2)
        Kill(Player3)
        Kill(Player4)
        Kill(Player5)
        Kill(Player6)
        SetInterrupt(TRUE)
END

