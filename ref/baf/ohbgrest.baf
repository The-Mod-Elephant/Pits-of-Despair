IF
    NumberOfTimesTalkedTo(0)
    Detect([PC])
THEN
    RESPONSE #100
        StartDialogueNoSet(LastSeenBy(Myself))
END

IF
    NumberOfTimesTalkedTo(0)
    !Detect([PC])
    InMyArea(Player1)
    !StateCheck(Player1,CD_STATE_NOTVALID)
THEN
    RESPONSE #100
        MoveToObject(Player1)
END

