IF
    Global("OHB_TALKED_BRODLE2","LOCALS",0)
    !See("ohbtartl")  // Tartle
    See([PC])
    Range(LastSeenBy(Myself),10)
    GlobalGT("OHB_LAST_BATTLE","GLOBAL",104)
    GlobalLT("OHB_LAST_BATTLE","GLOBAL",404)
THEN
    RESPONSE #100
        SetInterrupt(FALSE)
        FaceObject(LastSeenBy(Myself))
        SmallWait(5)
        StartDialogueNoSet(LastSeenBy(Myself))
        SetInterrupt(TRUE)
END

