/////////////////////////////////////////////////////////////////////
// Battle Prep
/////////////////////////////////////////////////////////////////////
// Levels 20+
IF
  CheckStatGT(Myself,19,LEVEL)
  Allegiance(Myself,ENEMY)
  Global("MO_AssignInvisPotion","LOCALS",0)
THEN
  RESPONSE #100
    GiveItemCreate("potn10",Myself,5,0,0)   // potion of invisibility
    SetGlobal("MO_AssignInvisPotion","LOCALS",1)
    Continue()
END

